<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hermes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hermes.activity.MainMenu"
            android:label="@string/title_activity_menu_principal"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hermes.activity.TextSound"
            android:label="@string/title_activity_texto_audio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.hermes.activity.TextLibras"
            android:label="@string/title_activity_texto_audio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.hermes.activity.ImageSound"
            android:label="@string/title_activity_imagesound"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>